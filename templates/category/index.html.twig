{% extends 'layoutAdmin.html.twig' %}

{% block title %}Category | Admin}{% endblock %}

{% block body %}
<main class="container mt-5">
    <h1>Category</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td class="w-25">
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-primary my-1 w-25">Show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-secondary my-1  w-25">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}" class="btn btn-success">Create new</a>
    <a href="{{ path('admin_home') }}" class="btn btn-primary">Return to home page</a>


    </main>
{% endblock %}
