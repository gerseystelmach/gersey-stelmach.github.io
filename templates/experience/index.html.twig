{% extends 'layoutAdmin.html.twig' %}

{% block title %}Experience{% endblock %}

{% block body %}
<main class="container mt-5">
    <h1>Experiences</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Company</th>
                <th>StartedAt</th>
                <th>FinishedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.title }}</td>
                <td>{{ experience.description }}</td>
                <td>{{ experience.company }}</td>
                <td>{{ experience.startedAt ? experience.startedAt|date('Y-m-d') : '' }}</td>
                <td>{{ experience.finishedAt ? experience.finishedAt|date('Y-m-d') : '' }}</td>
                       <td>{{ experience.finishedAt ? experience.finishedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('experience_show', {'id': experience.id}) }}">show</a>
                    <a href="{{ path('experience_edit', {'id': experience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('experience_new') }}" class="btn btn-success">Create new</a>
       <a href="{{ path('admin_home') }}" class="btn btn-primary">Return to home page</a>
    </main>
{% endblock %}
