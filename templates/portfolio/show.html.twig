{% extends 'base.html.twig' %}

{% block title %}Portfolio
{% endblock %}

{% block body %}
    <main class="mt-5 container">
        <h1>Portfolio</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ portfolio.id }}</td>
                </tr>
                <tr>
                    <th>ProjectName</th>
                    <td>{{ portfolio.projectName }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ portfolio.description }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img src="{{ asset('uploads/' ~ portfolio.image) }}" alt="" class="w-25"></td>
                </tr>
            </tbody>
        </table>


        <a href="{{ path('portfolio_edit', {'id': portfolio.id}) }}" class="btn btn-secondary my-3">Edit</a>

        {{ include('portfolio/_delete_form.html.twig') }}

        <a href="{{ path('portfolio_index') }}" class="btn btn-dark mt-5">Back to list</a>
    </main>

{% endblock %}
