{% extends 'layoutAdmin.html.twig' %}

{% block title %}Portfolio index{% endblock %}

{% block body %}
<main class="container mt-5">
    <h1>Portfolio</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ProjectName</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for portfolio in portfolios %}
            <tr>
                <td>{{ portfolio.id }}</td>
                <td>{{ portfolio.projectName }}</td>
                <td>{{ portfolio.description }}</td>
            
                <td><img src="{{ asset('/uploads/' ~ portfolio.image) }}" alt="" class="w-50"></td>
                <td>
                    <a href="{{ path('portfolio_show', {'id': portfolio.id}) }}" class="btn btn-primary my-1 w-100">Show</a>
                    <a href="{{ path('portfolio_edit', {'id': portfolio.id}) }}" class="btn btn-secondary my-1  w-100">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('portfolio_new') }}" class="btn btn-success">Create new</a>
      <a href="{{ path('admin_home') }}" class="btn btn-primary">Return to home page</a>
    </main>
{% endblock %}
