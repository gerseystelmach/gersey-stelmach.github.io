{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<main class="container mt-5">
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Article</th>
                <td>{{ article.article }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td><img src="{{ asset('/uploads/article/' ~ article.poster) }}" alt="" class="w-25"></td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}" class="btn btn-dark my-5">Back to list</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-secondary my-5">Edit</a>

    {{ include('article/_delete_form.html.twig') }}
    </main>
{% endblock %}
