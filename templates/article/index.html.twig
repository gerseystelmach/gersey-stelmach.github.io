{% use "bootstrap_base_layout.html.twig" %}

{% extends 'layoutAdmin.html.twig' %}

{% block title %}Experience
{% endblock %}

{% block body %}
    <main class="container mt-5">
    <h1>Articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Article</th>
                <th>Poster</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Actions</th>               
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.article }}</td>
                <td><img src="{{ asset('/uploads/article/' ~ article.poster) }}" alt="" class="w-50"></td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary my-1 w-100">Show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-secondary my-1  w-100">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}"  class="btn btn-success">Create new</a>
   
       <a href="{{ path('admin_home') }}" class="btn btn-primary">Return to home page</a>
{% endblock %}
